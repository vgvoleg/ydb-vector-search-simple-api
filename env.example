# YDB Connection Settings
YDB_HOST=localhost
YDB_PORT=2136
YDB_DATABASE=/local
YDB_TABLE=ydb_langchain_store
YDB_SECURE=false

# Column Names in YDB Table
COLUMN_ID=id
COLUMN_TITLE=title
COLUMN_VENDOR=vendor
COLUMN_DESCRIPTION=description
COLUMN_EMBEDDING=embedding

# Search Strategy
# Options: CosineSimilarity, InnerProductSimilarity, CosineDistance, EuclideanDistance, ManhattanDistance
SEARCH_STRATEGY=CosineSimilarity

# Vector Index Settings (optional)
INDEX_ENABLED=false
INDEX_NAME=ydb_vector_index
INDEX_TREE_SEARCH_TOP_SIZE=1

# Vector Format
# Set to true if embeddings are stored as binary strings (recommended)
# Set to false if embeddings are stored as List<Float>
VECTOR_PASS_AS_BYTES=true

# Embedding API Settings
# URL для получения эмбеддингов по текстовым запросам
# Пример: https://some-url.net/query_embed/embedding
EMBEDDING_API_URL=

# Flask Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=true
